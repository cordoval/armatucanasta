{% extends 'GicsdrArmatucanastaBundle::base.html.twig' %}

{% block title %}Lista de Conversión{% endblock %}

{% block body %}
<h1>lista de conversión</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Desde</th>
            <th>Hasta</th>
            <th>Factor</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.unidaddesdedescripcion }}</td>
            <td>{{ entity.unidadhastadescripcion }}</td>
            <td>{{ entity.factor }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('conversion_show', { 'id': entity.id }) }}">mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('conversion_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('conversion_new') }}">
            Crear nueva conversión
        </a>
    </li>
</ul>
{% endblock %}
