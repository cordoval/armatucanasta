{% extends 'GicsdrArmatucanastaBundle::base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<h1>Conversion</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Id_unidad_desde</th>
            <td>{{ entity.idunidaddesde }}</td>
        </tr>
        <tr>
            <th>Id_unidad_hasta</th>
            <td>{{ entity.idunidadhasta }}</td>
        </tr>
        <tr>
            <th>Factor</th>
            <td>{{ entity.factor }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('conversion') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('conversion_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('conversion_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
