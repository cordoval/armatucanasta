{% extends 'GicsdrArmatucanastaBundle::base.html.twig' %}

{% block title %}Ingredientes{% endblock %}

{% block body %}
<h1>Editar Ingrediente</h1>

<form action="{{ path('ingrediente_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Editar</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('ingrediente') }}">
            Volver a la lista
        </a>
    </li>
    <li>
        <form action="{{ path('ingrediente_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Borrar</button>
        </form>
    </li>
</ul>
{% endblock %}
