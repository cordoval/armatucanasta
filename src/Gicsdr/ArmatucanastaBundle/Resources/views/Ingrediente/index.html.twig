{% extends 'GicsdrArmatucanastaBundle::base.html.twig' %}

{% block title %}Lista de ingredientes{% endblock %}

{% block body %}
<h1>Lista de Ingredientes</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id_plato</th>
            <th>Id_unidad</th>
            <th>Id_insumo</th>
            <th>Cantidad</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('ingrediente_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.idplato }}</td>
            <td>{{ entity.idunidad }}</td>
            <td>{{ entity.idinsumo }}</td>
            <td>{{ entity.cantidad }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('ingrediente_show', { 'id': entity.id }) }}">Mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('ingrediente_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('ingrediente_new') }}">
            Crear nueva lista de ingredientes
        </a>
    </li>
</ul>
{% endblock %}
