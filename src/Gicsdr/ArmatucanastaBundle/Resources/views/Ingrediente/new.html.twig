{% extends 'GicsdrArmatucanastaBundle::base.html.twig' %}

{% block title %}Nuevos ingredientes{% endblock %}

{% block body %}
<h1>Creacion de ingredientes</h1>

<form action="{{ path('ingrediente_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit">Crear</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('ingrediente') }}">
            Volver a la lista
        </a>
    </li>
</ul>
{% endblock %}
