{% extends 'GicsdrArmatucanastaBundle::base.html.twig' %}

{% block title %}Mostrar ingredientes{% endblock %}

{% block body %}
<h1>Ingredientes</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Id_plato</th>
            <td>{{ entity.idplato }}</td>
        </tr>
        <tr>
            <th>Id_unidad</th>
            <td>{{ entity.idunidad }}</td>
        </tr>
        <tr>
            <th>Id_insumo</th>
            <td>{{ entity.idinsumo }}</td>
        </tr>
        <tr>
            <th>Cantidad</th>
            <td>{{ entity.cantidad }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('ingrediente') }}">
            Volver a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('ingrediente_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>
        <form action="{{ path('ingrediente_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Borrar</button>
        </form>
    </li>
</ul>
{% endblock %}
