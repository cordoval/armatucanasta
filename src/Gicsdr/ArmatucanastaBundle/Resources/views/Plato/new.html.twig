{% extends 'GicsdrArmatucanastaBundle::base.html.twig' %}

{% block title %}Nuevo Plato{% endblock %}

{% block body %}
<h1>Creacion de un plato</h1>

<form action="{{ path('plato_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit">Crear</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('plato') }}">
            Volver a la lista
        </a>
    </li>
</ul>
{% endblock %}
