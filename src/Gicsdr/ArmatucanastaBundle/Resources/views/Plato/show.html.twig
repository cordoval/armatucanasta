<h1>Plato</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Id_cocina</th>
            <td>{{ entity.idcocina }}</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
        </tr>
        <tr>
            <th>Descripcion</th>
            <td>{{ entity.descripcion }}</td>
        </tr>
        <tr>
            <th>Num_personas</th>
            <td>{{ entity.numpersonas }}</td>
        </tr>
        <tr>
            <th>Preparacion</th>
            <td>{{ entity.preparacion }}</td>
        </tr>
        <tr>
            <th>Img_path</th>
            <td>{{ entity.imgpath }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('plato') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('plato_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('plato_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
