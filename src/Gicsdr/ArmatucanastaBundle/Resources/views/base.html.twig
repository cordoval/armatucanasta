<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Arma Tu Canasta{% endblock %}</title>
        {% block stylesheets %}
          <link href="{{ asset('css/bootstrap.css') }}" type = "text/css" rel="stylesheet">
          <style>
            body { padding-top: 60px; }
          </style>
          <link href="{{ asset('css/bootstrap-responsive.css') }}" type="text/css" rel="stylesheet">
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body data-spy="scroll" data-target=".subnav" data-offset="50">
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
            <a class="brand" href="{{ path('homepage') }}">Arma tu Canasta</a>
            <div class="nav-collapse collapse">
              <ul class="nav">
                <li class="active">
                  <a href="#">TOP 20</a>
                </li>
                <li>
                  <a href="#">EN ESTACION</a>
                </li>
                <!--
                <li>
                  <a href="#">MIS FAVORITAS</a>
                </li>
                -->
                <li>
                  <a href="{{ path('plato') }}">PLATOS</a>
                </li>
                <li>
                  <a href="#">INSUMOS</a>
                </li>
                <li>
                  <a href="{{ path('unidad') }}">UNIDADES</a>
                </li>
                <li>
                  <a href="{{ path('conversion') }}">CONVERSION</a>
                </li>
                <!--
                <li>
                  <a href="#">USUARIOS</a>
                </li>
                -->
                <li class="divider-vertical"></li>
              </ul>
              <ul class="nav pull-right">
                <li class="divider-vertical"></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">USUARIO<b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li>
                      <a href="{{ path('logout') }}">Salir</a>
                    </li>
                  </ul>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="container">
        <div id="content">
          {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
        <script src="{{ asset('js/jquery-1.8.2.js') }}" type="text/javascript"></script>
        <script src="{{ asset('js/bootstrap.js') }}" type="text/javascript"></script>
        {% endblock %}
      </div>
    </body>
</html>

